<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, class: "fas fa-heart heart_red", remote: true do %>
    <%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, class: "fas fa-heart heart_blue", remote: true do %>
    <%= book.favorites.count %>
  <% end %>
<% end %>